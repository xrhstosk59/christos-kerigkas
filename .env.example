# .env.example - Environment Variables Template

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Database Backup (for db:dump script)
DATABASE_HOST="your-db-host.supabase.com"
DATABASE_USER="postgres.your_project_id"
DATABASE_NAME="postgres"
DATABASE_PASSWORD="your_database_password"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="your_supabase_project_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Authentication
AUTH_SECRET="your_auth_secret_here" # Generate with: openssl rand -base64 32

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Christos Kerigkas"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Email (for contact forms, notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
FROM_EMAIL="noreply@yourdomain.com"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes

# Security
# CRITICAL: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your_64_character_hex_encryption_key_here"
ENCRYPTION_SALT="your_encryption_salt_for_key_derivation"
CSRF_SECRET="your_csrf_secret_here"

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID="GA_MEASUREMENT_ID"
NEXT_PUBLIC_GOOGLE_ANALYTICS="G-XXXXXXXXXX"

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN="your_sentry_dsn_here"
SENTRY_ORG="your_sentry_organization"
SENTRY_PROJECT="your_sentry_project"
SENTRY_AUTH_TOKEN="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"

# File Upload (Optional)
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Redis (Upstash - for distributed rate limiting, caching, sessions)
# Get credentials from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-endpoint.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token"
# Optional: Traditional Redis URL (fallback)
REDIS_URL="redis://localhost:6379"

# Development
NODE_ENV="development"
ANALYZE="false" # Set to "true" to analyze bundle size

# Monitoring & Performance
ENABLE_PERFORMANCE_MONITORING="true"
LOG_LEVEL="info" # debug, info, warn, error

# Social Media (Optional)
NEXT_PUBLIC_TWITTER_HANDLE="@yourhandle"
NEXT_PUBLIC_LINKEDIN_URL="https://linkedin.com/in/yourprofile"
NEXT_PUBLIC_GITHUB_URL="https://github.com/yourusername"

# Contact Form
CONTACT_FORM_TO_EMAIL="contact@yourdomain.com"
NOTIFICATION_EMAIL="notifications@yourdomain.com"

# Feature Flags (Optional)
ENABLE_2FA="true"
ENABLE_AUDIT_LOGGING="true"
ENABLE_RATE_LIMITING="true"
ENABLE_OFFLINE_SUPPORT="true"

# Deployment (Production only)
VERCEL_URL="your_production_url"
DEPLOYMENT_WEBHOOK_SECRET="your_webhook_secret"