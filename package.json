    "bundle-size": "npm run build && npx bundlesize",
    "db:health": "tsx scripts/database-health.ts",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:status": "tsx scripts/migrate.ts status",
    "migrate:run": "tsx scripts/migrate.ts run",
    "migrate:verify": "tsx scripts/migrate.ts verify",
    "deps:check": "depcheck",
    "clean": "rm -rf .next out dist",
